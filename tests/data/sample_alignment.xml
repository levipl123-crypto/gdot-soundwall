<?xml version="1.0" encoding="UTF-8"?>
<LandXML version="1.2" xmlns="http://www.landxml.org/schema/LandXML-1.2">
  <Project name="GDOT_SoundWall_Test" desc="Synthetic test alignment for sound wall modeling"/>
  <Units>
    <Metric linearUnit="meter" areaUnit="squareMeter" volumeUnit="cubicMeter"
            angularUnit="radians" directionUnit="radians"/>
  </Units>

  <Alignments>
    <!--
      Test alignment: ~305m total
      - 100m tangent heading north (azimuth 0)
      - 105m arc curving right (R=200m, delta=~30deg)
      - 100m tangent heading ~30deg east of north
    -->
    <Alignment name="SoundWall_A" length="305.24" staStart="0.000">
      <CoordGeom>
        <!-- Tangent 1: 100m heading due north -->
        <Line length="100.0">
          <Start>1000.000 2000.000</Start>
          <End>1100.000 2000.000</End>
        </Line>
        <!-- Curve: R=200m, 30-degree right curve, arc length = 200*0.5236 = 104.72m -->
        <Curve rot="cw" radius="200.0" length="104.720">
          <Start>1100.000 2000.000</Start>
          <Center>1100.000 2200.000</Center>
          <End>1200.000 2100.000</End>
        </Curve>
        <!-- Tangent 2: 100m heading 30 degrees east of north -->
        <Line length="100.0">
          <Start>1200.000 2100.000</Start>
          <End>1286.603 2150.000</End>
        </Line>
      </CoordGeom>

      <!-- Vertical Profile: gentle grade with sag curve -->
      <Profile>
        <ProfAlign name="Profile_A">
          <PVI>0.000 100.000</PVI>
          <ParaCurve length="60.0">152.500 99.500</ParaCurve>
          <PVI>305.240 101.500</PVI>
        </ProfAlign>
      </Profile>
    </Alignment>
  </Alignments>

  <!-- Terrain Surface: flat-ish TIN covering alignment corridor -->
  <Surfaces>
    <Surface name="ExistingGround">
      <Definition surfType="TIN">
        <Pnts>
          <!-- Row 1 (south) -->
          <P id="1">950.000 1950.000 99.50</P>
